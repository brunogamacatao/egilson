<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label "Nome de usuário (nick)" %><br />
  <%= f.text_field :username %></div>

  <div><%= f.label "Senha" %> <i>(deixe em branco caso você não queira alterar)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label "Confirmação de senha" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label "Senha atual" %> <i>(precisamos saber que você é você)</i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit "Atualizar", :class => "button round" %></div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Insatisfeito ? <%= link_to "Cancelar minha conta", registration_path(resource_name), :data => { :confirm => "Tem certeza ?" }, :method => :delete %>.</p>

<%= link_to "Voltar", :back %>
