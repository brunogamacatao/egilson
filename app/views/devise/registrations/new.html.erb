<h3>Registre-se</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label "Nome de usuário (nick)" %><br />
  <%= f.text_field :username %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <% if f.object.password_required? %>
    <div><%= f.label "Senha" %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label "Confirmação de senha" %><br />
    <%= f.password_field :password_confirmation %></div>
  <% end %>

  <div><%= f.submit "Registre-se", :class => "button round" %></div>
<% end %>

<h5 class="text-right">
  Ou&nbsp;&nbsp;
  <%= link_to "Entre pelo Facebook", user_omniauth_authorize_path(:facebook), :class => "button small" %>
</h5>